<%= simple_form_for live, html: { class: "live form" } do |f| %>
  <% if live.errors.any? %>
    <div class="error-message">
      <%= live.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :title, input_html: { autofocus: true } %>
  <%= f.input :description, input_html: { autofocus: true } %>
  <%= f.input :air_date, input_html: { autofocus: true } %>
  <%= f.input :image, as: :file %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>
