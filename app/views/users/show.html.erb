<div class="show-header">
  <div class="show-header__infos">
      <% if @user.photo.attached? %>
        <%= cl_image_tag @user.photo.key, class: "show-header__avatar" %>
      <%else%>
        <%= image_tag "avatar-placeholder.jpg", alt: "avatar", class: "show-header__avatar"%>
      <%end%>
      <h3><%= @first_name %> <%= @last_name %></h3>
      <%=link_to "Edit my profile", edit_user_registration_path(current_user)%>
      <p><%= @bio%></p>
  </div>
  <%= link_to "Add a Live", new_live_path , class: "btn btn--primary" %>
</div>

<p>&nbsp My upcoming live streams</p>
<% if @lives.any? %>
  <div class="cards-container">
    <%= render @next_lives %>
  </div>
<%end%>

<p>&nbsp My past live streams</p>
<% if @lives.any? %>
  <div class="cards-container">
    <%= render @previous_lives %>
  </div>
<% end %>

<div class="engage">
  <%=link_to "Claim your LiveTree",  lives_path , class:"btn btn--primary btn--engage"%>
</div>
